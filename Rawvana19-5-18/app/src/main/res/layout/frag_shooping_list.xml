<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.iprismtech.rawvana.fragments.FragFavorites">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:gravity="center"
        android:weightSum="1"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/ivDelete"
            android:layout_width="30dp"
            android:padding="5dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:src="@drawable/delete" />
        <com.iprismtech.rawvana.others.MyCustomTextView2
            android:id="@+id/tvHeaderText"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Shopping List"
            android:gravity="center"
            android:padding="5dp"
            android:textColor="@color/apptheme"
            android:textSize="15sp" />
        <ImageView
            android:id="@+id/ivEmail"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="fitXY"
            android:padding="5sp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:src="@drawable/email"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black50"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_white_radius">

        <EditText
            android:id="@+id/etSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Add your own items to the shopping list"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="15dp"
            android:layout_gravity="center"
            android:imeOptions="actionNext"
            android:background="@color/transparent"
            android:inputType="text"
            android:textColor="@color/black"
            android:textColorHint="@color/color999"/>
    </LinearLayout>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/NoList"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.iprismtech.rawvana.others.MyCustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textColor="@color/test"
                android:text=" Shopping List is Empty"/>
            <com.iprismtech.rawvana.others.MyCustomTextView1
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginTop="7dp"
                android:gravity="center"
                android:textColor="@color/test"
                android:text="Tap"/>
            <Button
                android:id="@+id/btnAdd"
                android:layout_width="220dp"
                android:layout_height="42dp"
                android:text="Add to shopping list"
                android:textColor="@color/white"
                android:padding="2dp"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:background="@drawable/button_shape"/>
            <com.iprismtech.rawvana.others.MyCustomTextView1
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="@color/test"
                android:text="in the recipe"/>
            <com.iprismtech.rawvana.others.MyCustomTextView1
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:textColor="@color/test"
                android:text="to start collecting ingredients"/>

        </LinearLayout>
        <ScrollView
            android:id="@+id/svList"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/llList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>
