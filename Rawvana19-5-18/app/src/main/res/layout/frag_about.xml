            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:text="Read the disclaimer"
            android:textColor="@color/test"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="7dp"
            android:layout_marginTop="7dp"
            android:background="@color/color_ddd"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/ivSupport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/touchzen_support"
                android:contentDescription="image"
                android:maxHeight="45dp"
                android:scaleType="fitXY"/>
            <ImageView
                android:id="@+id/ivTouch_website"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/touchzen_website"
